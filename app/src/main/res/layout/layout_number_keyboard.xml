<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rect_hgray_1px"
    android:orientation="vertical"
    android:padding="1px" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            style="@style/style_text_keyboard"
            android:text="1" />

        <View style="@style/style_dgray_line_vertical" />

        <TextView
            android:id="@+id/textView2"
            style="@style/style_text_keyboard"
            android:text="2" />

        <View style="@style/style_dgray_line_vertical" />

        <TextView
            android:id="@+id/textView3"
            style="@style/style_text_keyboard"
            android:text="3" />
    </LinearLayout>

      <View style="@style/style_dgray_line_horizontal" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView4"
            style="@style/style_text_keyboard"
            android:text="4" />

        <View style="@style/style_dgray_line_vertical" />

        <TextView
            android:id="@+id/textView5"
            style="@style/style_text_keyboard"
            android:text="5" />

        <View style="@style/style_dgray_line_vertical" />

        <TextView
            android:id="@+id/textView6"
            style="@style/style_text_keyboard"
            android:text="6" />
    </LinearLayout>
 <View style="@style/style_dgray_line_horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView7"
            style="@style/style_text_keyboard"
            android:text="7" />

        <View style="@style/style_dgray_line_vertical" />

        <TextView
            android:id="@+id/textView8"
            style="@style/style_text_keyboard"
            android:text="8" />

        <View style="@style/style_dgray_line_vertical" />

        <TextView
            android:id="@+id/textView9"
            style="@style/style_text_keyboard"
            android:text="9" />
    </LinearLayout>
     <View style="@style/style_dgray_line_horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_confirm"
            style="@style/style_text_keyboard"
            android:text="确定" 
            android:textSize="@dimen/lt_20_dip"
            />

        <View style="@style/style_dgray_line_vertical" />

        <TextView
            android:id="@+id/textView0"
            style="@style/style_text_keyboard"
            android:text="0" />

        <View style="@style/style_dgray_line_vertical" />

        <TextView
            android:id="@+id/tv_delete"
            style="@style/style_text_keyboard"
            android:text="删除" 
             android:textSize="@dimen/lt_20_dip"
            />
    </LinearLayout>

</LinearLayout>