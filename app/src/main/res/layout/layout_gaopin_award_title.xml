<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="7.0dip" >

    <RelativeLayout
        android:id="@+id/latest_period_award_info_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
          >

            <LinearLayout
                android:id="@+id/latest_period_award_info_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="15dip"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffffff"
                    android:textSize="13sp" />

                <LinearLayout
                    android:id="@+id/saizi_icons_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/number_tv1"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#ffffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/number_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                           android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#ffffffff"
                        android:layout_marginLeft="2.0dip" />

                    <TextView
                        android:id="@+id/number_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                           android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#ffffffff"
                        android:layout_marginLeft="2.0dip" />

                    <TextView
                        android:id="@+id/number_tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                           android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#ffffffff"
                        android:layout_marginLeft="2.0dip" />

                    <TextView
                        android:id="@+id/number_tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                           android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#ffffffff"
                        android:layout_marginLeft="2.0dip" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/awarding_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/awarding_text_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="--期开奖中..."
                    android:textColor="#ffffffff"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/awarding_time_icon_iv"
                       android:layout_marginTop="4.0dip"
                     android:layout_below="@+id/awarding_text_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/awarding_time_icon_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_toRightOf="@+id/awarding_time_icon_iv"
                    android:layout_alignTop="@+id/awarding_time_icon_iv"
                    android:layout_marginLeft="5.0dip"
                    android:text="等待开奖..."
                    android:textColor="#ffffffff"
                    android:textSize="14sp" />
            </RelativeLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8.0dip"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/jiezhi_period_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="距--期截止"
                android:textColor="#ffffffff"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.0dip"
                android:orientation="horizontal"
                android:gravity="center" >

                <TextView
                    android:id="@+id/time_hour_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                 
                    android:gravity="center"
                    android:text="--"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/time_hour_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.0dip"
                
                    android:gravity="center"
                    android:text="--"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    android:typeface="serif" />

                <ImageView
                    android:id="@+id/hour_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/k3_count_down_maohao" />

                <TextView
                    android:id="@+id/time_minute_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  
                    android:gravity="center"
                    android:text="--"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/time_minute_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.0dip"
                  
                    android:gravity="center"
                    android:text="--"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    android:typeface="serif" />

                <ImageView
                    android:id="@+id/minute_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/k3_count_down_maohao" />

                <TextView
                    android:id="@+id/time_second_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   
                    android:gravity="center"
                    android:text="--"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/time_second_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="5.0dip"
                   
                    android:gravity="center"
                    android:text="--"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    android:typeface="serif" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/top_bottomLine_iv"
        android:layout_marginTop="3.0dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shixian_x" />

</LinearLayout>