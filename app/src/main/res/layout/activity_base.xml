<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/base_main_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/title_view"
        android:layout_width="fill_parent"
        android:layout_height="44dp">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_alignParentBottom="true"
            android:background="@color/f_gray" />

        <ImageButton
            android:id="@+id/left_button"
            android:layout_width="@dimen/lt_48_dip"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/title_btn_bg"
            android:src="@drawable/btn_banner_back"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/left_divider"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginBottom="8.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_toRightOf="@id/left_button"
            android:src="@drawable/title_diliver"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/center_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/title_btn_bg"
            android:gravity="bottom"
            android:paddingLeft="4.0dip"
            android:paddingRight="4.0dip">

            <TextView
                android:id="@+id/center_textview"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="" />

            <ImageView
                android:id="@+id/center_textview_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                android:src="@drawable/triangle_white"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="right|center">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleSmallTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:max="10000"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/center_divider"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginBottom="8.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_toLeftOf="@id/center_button"
            android:src="@drawable/title_diliver"
            android:visibility="gone" />

        <Button
            android:id="@+id/center_button"
            android:layout_width="46.0dip"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/right_divider"
            android:background="@drawable/title_btn_bg"
            android:gravity="center"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/right_divider"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginBottom="8.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_toLeftOf="@+id/right_layout"
            android:src="@drawable/title_diliver"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/right_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true">

            <Button
                 android:id="@+id/right_button"
                android:layout_width="100.0dip"
                android:layout_height="fill_parent"
                android:background="@drawable/title_btn_bg"
                android:gravity="center"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">

                <ImageButton
                     android:id="@+id/right_sec_imgbtn"
                    android:layout_width="46.0dip"
                    android:layout_height="fill_parent"
                    android:layout_toLeftOf="@+id/right_sec_divider"
                    android:background="@drawable/title_btn_bg"
                    android:gravity="center"
                    android:src="@drawable/icon_filter"
                    android:visibility="gone" />

                <ImageView
                     android:id="@+id/right_sec_divider"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="8.0dip"
                    android:layout_marginTop="8.0dip"
                    android:layout_toLeftOf="@+id/right_imgbtn"
                    android:src="@drawable/title_diliver"
                    android:visibility="gone" />

                <ImageButton
                     android:id="@+id/right_imgbtn"
                    android:layout_width="@dimen/lt_48_dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/title_btn_bg"
                    android:gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/icon_filter"
                    android:visibility="gone" />

                <TextView
                     android:id="@+id/right_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5.0dip"
                    android:background="@drawable/title_btn_bg"
                    android:gravity="center"
                    android:minWidth="@dimen/lt_75_dip"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="8.0dip"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/color_register_pressed"
                    android:textSize="17sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </FrameLayout>

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleSmallTitle"
            android:layout_width="@dimen/lt_21_dip"
            android:layout_height="@dimen/lt_21_dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15.0dip"
            android:indeterminateBehavior="cycle"
            android:indeterminateDrawable="@drawable/progressbg"
            android:max="10000"
            android:progressDrawable="@drawable/progressbg"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_no_data_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/no_data_alert_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/img_no_record"
            android:visibility="visible" />
        <TextView 
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/lt_12_dip"
            android:layout_marginTop="@dimen/lt_12_dip"

            android:gravity="center"
            android:text="不要潜水啦\n快去首页选购吧!"
            />
    </LinearLayout>

</FrameLayout>